<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color of the border -->
            <stroke
                android:width="2dp"
            android:color="@android:color/black" /> <!-- Border color -->
            <corners android:radius="4dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="2dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>
