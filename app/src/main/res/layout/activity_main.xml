<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"> <!-- Added padding for overall layout -->

    <Button
        android:id="@+id/btnShowMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch Polygons"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp" /> <!-- Margin for spacing between buttons -->

    <Button
        android:id="@+id/btnShowSymptoms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch Symptoms"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btnShowMap"
        android:enabled="true" /> <!-- Enabled the button -->

</RelativeLayout>
